<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <TextView
        android:id="@+id/recycler_setting_input_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/recycler_setting_input_editText"
        tools:text="Version"
        android:textColor="#424242"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/recycler_setting_input_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/recycler_setting_input_textView"
        android:layout_alignBaseline="@+id/recycler_setting_input_textView"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        tools:text="value"
        android:textColor="#757575"
        android:inputType="none" />

</RelativeLayout>